{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*",
    "src/types/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node",
      "vitest/globals"
    ],
    "baseUrl": "./src",
    "paths": {
      "@main/*": [
        "main/*"
      ],
      "@preload/*": [
        "preload/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@launcherTypes/*": [
        "types/*"
      ]
    }
  }
}
