{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": "./src",
    "paths": {
      "@main/*": ["main/*"],
      "@preload/*": ["preload/*"],
      "@common/*": ["common/*"]
    }
  }
}
