            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.0.0-M2</version>
                <executions>
                    <execution>
                        <id>check-folder-exist</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireFilesExist>
                                    <files>
                                        <file>${project.build.directory}${file.separator}preparedJDKMac</file>
                                        <!--NOT WORKING<file>${project.build.directory}${file.separator}preparedJDKWin</file>-->
                                    </files>
                                </requireFilesExist>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>1.7.25</version>
                <executions>
                    <execution>
                        <id>l4j-gui</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <outputDir>${project.build.directory}</outputDir>
                            <headerType>gui</headerType>
                            <jar>
                                ${project.build.directory}${file.separator}${project.artifactId}-${project.version}-jar-with-dependencies.jar
                            </jar>
                            <outfile>
                                ${project.build.directory}${file.separator}${project.artifactId}-${project.version}.exe
                            </outfile>
                            <downloadUrl>https://bell-sw.com/pages/java-11.0.5/</downloadUrl>
                            <classPath>
                                <mainClass>${main.class}</mainClass>
                            </classPath>
                            <jre>
                                <!--NOT WORKING<path>${project.build.directory}${file.separator}preparedJDKWin</path>-->
                                <path>${jlink.win.jdk.path}</path>
                                <bundledJre64Bit>true</bundledJre64Bit>
                                <minVersion>11</minVersion>
                                <jdkPreference>preferJre</jdkPreference>
                                <runtimeBits>64</runtimeBits>
                            </jre>
                            <versionInfo>
                                <fileVersion>1.0.0.0</fileVersion>
                                <txtFileVersion>${project.version}</txtFileVersion>
                                <fileDescription>${app.name}</fileDescription>
                                <copyright>C</copyright>
                                <productVersion>1.0.0.0</productVersion>
                                <txtProductVersion>1.0.0.0</txtProductVersion>
                                <productName>${app.name}</productName>
                                <internalName>${project.artifactId}</internalName>
                                <originalFilename>${project.artifactId}-${project.version}.exe</originalFilename>
                            </versionInfo>
                            <messages>
                                <bundledJreErr>There is a problem with the bundled JRE.</bundledJreErr>
                                <startupErr>There is a problem with starting up.</startupErr>
                                <jreVersionErr>There is a problem with your Java version. Is it Java 11+?</jreVersionErr>
                                <launcherErr>There is a problem with the launcher.</launcherErr>
                            </messages>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.micatechnologies</groupId>
                <artifactId>appbundle-maven-plugin</artifactId>
                <version>2019.1</version>
                <configuration>
                    <version>${version}</version>
                    <includeApplicationsSymlink>true</includeApplicationsSymlink>
                    <jrePath>${project.build.directory}${file.separator}preparedJDKMac</jrePath>
                    <mainClass>${main.class}</mainClass>
                    <iconFile>forgelauncher.icns</iconFile>
                    <additionalResources>
                        <fileSet>
                            <directory>
                                ${project.basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}mac-dmg-include
                            </directory>
                        </fileSet>
                    </additionalResources>
                    <additionalBundledClasspathResources>
                        <fileSet>
                            <directory>
                                ${project.basedir}${file.separator}src${file.separator}main${file.separator}resources
                            </directory>
                        </fileSet>
                    </additionalBundledClasspathResources>
                    <bundleName>${app.name}</bundleName>
                    <generateDiskImageFile>true</generateDiskImageFile>
                    <diskImageInternetEnable>true</diskImageInternetEnable>
                    <buildDirectory>${project.build.directory}${file.separator}${app.name}</buildDirectory>
                    <jvmOptions>
                        <jvmOption>-Dfile.encoding=UTF-8</jvmOption>
                    </jvmOptions>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


