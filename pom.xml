<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- APPLICATION/ARTIFACT INFORMATION -->
    <groupId>com.micatechnologies.minecraft</groupId>
    <artifactId>launcher</artifactId>
    <version>2021.1</version>
    <name>Mica Minecraft Launcher</name>
    <packaging>jar</packaging>

    <!-- PROJECT AND CUSTOM PROPERTIES -->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <main.class>com.micatechnologies.minecraft.launcher.LauncherCore</main.class>
        <app.name>Mica Minecraft Launcher</app.name>
        <info.vmargs>-Djava.net.preferIPv4Stack=true</info.vmargs>
        <izpack.staging>${project.build.directory}${file.separator}windows-installer</izpack.staging>
        <timestamp>${maven.build.timestamp}</timestamp>
        <maven.build.timestamp.format>dd-MM-yyyy HH:mm</maven.build.timestamp.format>
        <dependency.locations.enabled>false</dependency.locations.enabled>
    </properties>

    <!-- SPECIFIED REPOSITORIES FOR DEPENDENCIES -->
    <repositories>
        <!-- JCenter REPO -->
        <repository>
            <id>jcenter</id>
            <url>https://jcenter.bintray.com</url>
            <name>jcenter-bintray</name>
        </repository>

        <!-- CyberDuck MAVEN REPOSITORY -->
        <repository>
            <id>maven.cyberduck.io-release</id>
            <url>http://repo.maven.cyberduck.io.s3.amazonaws.com/releases/</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

        <!-- GitHub BASED MAVEN REPOS -->
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <!-- CLEANUP UNWANTED FILES AND BINARIES -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>target</directory>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- SET APP VERSION AND NAME CONSTANTS -->
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <executions>
                    <execution>
                        <id>replace-version-number</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <includes>
                        <include>
                            ${project.basedir}${file.separator}src${file.separator}main${file.separator}java${file.separator}com${file.separator}micatechnologies${file.separator}minecraft${file.separator}launcher${file.separator}consts${file.separator}LauncherConstants.java
                        </include>
                    </includes>
                    <replacements>
                        <replacement>
                            <token>LAUNCHER_APPLICATION_NAME = ".*"</token>
                            <value>LAUNCHER_APPLICATION_NAME = "${app.name}"</value>
                        </replacement>
                        <replacement>
                            <token>LAUNCHER_APPLICATION_VERSION = ".*"</token>
                            <value>LAUNCHER_APPLICATION_VERSION = "${project.version}"</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>

            <!-- COMPILE CODE -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>16</source>
                    <target>16</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <!-- ASSEMBLE JAR WITH DEPENDENCIES -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${main.class}</mainClass>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- DOWNLOAD JAVA RUNTIMES -->
            <plugin>
                <groupId>com.igormaznitsa</groupId>
                <artifactId>mvn-jlink-wrapper</artifactId>
                <version>1.0.5</version>
                <executions>
                    <!-- CACHE MAC JDK 11 -->
                    <execution>
                        <id>cache-jdk-11-mac</id>
                        <goals>
                            <goal>cache-jdk</goal>
                        </goals>
                        <configuration>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <type>jdk</type>
                                <version>16.0.1+9</version>
                                <arch>amd64-full</arch>
                                <os>macos</os>
                            </providerConfig>
                            <jdkCachePath>${project.basedir}${file.separator}jre${file.separator}mac</jdkCachePath>
                            <jdkPathProperty>jlink.mac.jdk.path</jdkPathProperty>
                        </configuration>
                    </execution>
                    <!-- CACHE WIN JDK 11 -->
                    <execution>
                        <id>cache-jdk-11-win</id>
                        <goals>
                            <goal>cache-jdk</goal>
                        </goals>
                        <configuration>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <type>jdk</type>
                                <version>16.0.1+9</version>
                                <arch>amd64-full</arch>
                                <os>windows</os>
                            </providerConfig>
                            <jdkCachePath>${project.basedir}${file.separator}jre${file.separator}win</jdkCachePath>
                            <jdkPathProperty>jlink.win.jdk.path</jdkPathProperty>
                        </configuration>
                    </execution>
                    <!-- CACHE LINUX JDK 11 -->
                    <execution>
                        <id>cache-jdk-11-lin</id>
                        <goals>
                            <goal>cache-jdk</goal>
                        </goals>
                        <configuration>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <type>jdk</type>
                                <version>16.0.1+9</version>
                                <arch>amd64-full</arch>
                                <os>linux</os>
                            </providerConfig>
                            <jdkCachePath>${project.basedir}${file.separator}jre${file.separator}lin</jdkCachePath>
                            <jdkPathProperty>jlink.lin.jdk.path</jdkPathProperty>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>io.github.fvarrui</groupId>
                <artifactId>javapackager</artifactId>
                <version>1.6.0-SNAPSHOT</version>
                <configuration>
                    <mainClass>${main.class}</mainClass>
                    <bundleJre>true</bundleJre>
                    <customizedJre>false</customizedJre>
                    <jreMinVersion>16</jreMinVersion>
                    <generateInstaller>true</generateInstaller>
                    <vmArgs>
                        <vmArg>--add-exports=javafx.controls/javafx.scene.control.skin=com.jfoenix</vmArg>
                        <vmArg>--add-exports=java.base/java.lang.reflect=ALL-UNNAMED</vmArg>
                        <vmArg>--add-exports=java.base/java.lang.reflect=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.Sun.javafx.scene.control.behavior=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.graphics/com.sun.javafx.stage=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.base/com.sun.javafx.event=ALL-UNNAMED</vmArg>
                        <vmArg>--add-exports=javafx.graphics/com.sun.javafx.scene=ALL-UNNAMED</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=ALL-UNNAMED</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control=ALL-UNNAMED</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.binding=com.jfoenix</vmArg>
                        <vmArg>--add-opens=javafx.controls/javafx.scene.control.skin=com.jfoenix</vmArg>
                        <vmArg>--add-opens=java.base/java.lang.reflect=ALL-UNNAMED</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.base/com.sun.javafx.binding=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.graphics/com.sun.javafx.stage=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.base/com.sun.javafx.event=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.controls/com.sun.javafx.scene.control=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.base/com.sun.javafx.binding=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.graphics/com.sun.javafx.stage=com.jfoenix</vmArg>
                        <vmArg>--add-exports=javafx.base/com.sun.javafx.event=com.jfoenix</vmArg>
                    </vmArgs>
                    <licenseFile>${project.basedir}${file.separator}LICENSE</licenseFile>
                    <runnableJar>
                        ${project.build.directory}${file.separator}${project.artifactId}-${project.version}-jar-with-dependencies.jar
                    </runnableJar>
                    <copyDependencies>false</copyDependencies>
                    <additionalResources>
                        <additionalResource>
                            ${project.basedir}${file.separator}src${file.separator}main${file.separator}resources
                        </additionalResource>
                    </additionalResources>
                    <macConfig>
                        <entitlements>
                            ${project.basedir}${file.separator}assets${file.separator}mac${file.separator}micaforgelauncher.entitlements
                        </entitlements>
                    </macConfig>
                </configuration>
                <executions>
                    <execution>
                        <id>bundling-for-windows</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <platform>windows</platform>
                            <createZipball>true</createZipball>
                            <!--suppress UnresolvedMavenProperty -->
                            <jdkPath>${jlink.win.jdk.path}</jdkPath>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bundling-for-linux</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <platform>linux</platform>
                            <createTarball>true</createTarball>
                            <!--suppress UnresolvedMavenProperty -->
                            <jdkPath>${jlink.lin.jdk.path}</jdkPath>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bundling-for-mac</id>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <platform>mac</platform>
                            <createTarball>true</createTarball>
                            <!--suppress UnresolvedMavenProperty -->
                            <jdkPath>${jlink.mac.jdk.path}</jdkPath>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


