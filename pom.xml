<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.micatechnologies.minecraft</groupId>
  <artifactId>forgelauncher</artifactId>
  <version>0.1.0</version>
  <name>Mica Minecraft Forge Launcher</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>

      <!-- Download JDK for Platform with cache-jdk -->
      <plugin>
        <groupId>com.igormaznitsa</groupId>
        <artifactId>mvn-jlink-wrapper</artifactId>
        <version>1.0.4</version>
        <configuration>
          <jdkCachePath>${project.basedir}${file.separator}jdk</jdkCachePath>
          <provider>BELLSOFT</provider>
          <providerConfig>
            <version>1.8.0</version>
            <arch>amd64</arch>
            <type>jdk</type>
          </providerConfig>
          <output/>
          <tool/>
        </configuration>
        <executions>
          <execution>
            <id>cache-jdk-8</id>
            <phase>install</phase>
            <goals>
              <goal>cache-jdk</goal>
            </goals>
          </execution>
          <execution>
            <id>cache-jdk-8</id>
            <phase>compile</phase>
            <goals>
              <goal>cache-jdk</goal>
            </goals>
          </execution>
          <execution>
            <id>cache-jdk-8</id>
            <phase>test</phase>
            <goals>
              <goal>cache-jdk</goal>
            </goals>
          </execution>
          <execution>
            <id>cache-jdk-8</id>
            <phase>package</phase>
            <goals>
              <goal>cache-jdk</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.micatechnologies.minecraft</groupId>
      <artifactId>forgemodpacklib</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>com.micatechnologies.minecraft</groupId>
      <artifactId>authlib</artifactId>
      <version>0.1.2</version>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.5.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>