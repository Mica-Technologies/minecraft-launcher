<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- APPLICATION/ARTIFACT INFORMATION -->
    <groupId>com.micatechnologies.minecraft</groupId>
    <artifactId>micaforgelauncher</artifactId>
    <version>2020.1.2</version>
    <name>micaforgelauncher</name>
    <packaging>jar</packaging>

    <!-- PROJECT AND CUSTOM PROPERTIES -->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <scala.version>2.13.1</scala.version>
        <main.class>com.micatechnologies.minecraft.forgelauncher.MCFLApp</main.class>
        <app.name>Mica Forge Launcher</app.name>
        <info.vmargs>-Djava.net.preferIPv4Stack=true</info.vmargs>
        <izpack.staging>${project.build.directory}${file.separator}windows-installer</izpack.staging>
    </properties>

    <!-- SPECIFIED REPOSITORIES FOR PLUGINS -->
    <pluginRepositories>
        <!-- for appbundle-maven-plugin -->
        <pluginRepository>
            <id>mica-appbundle-maven-plugin</id>
            <url>https://github.com/Mica-Technologies/appbundle-maven-plugin/raw/master/mvn-repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <!-- SPECIFIED REPOSITORIES FOR DEPENDENCIES -->
    <repositories>
        <!-- CyberDuck MAVEN REPOSITORY -->
        <repository>
            <id>maven.cyberduck.io-release</id>
            <url>http://repo.maven.cyberduck.io.s3.amazonaws.com/releases/</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

        <!-- GitHub BASED MAVEN REPOS -->
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <!-- SCALA -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/scala</source>
                            </sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>add-test-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-test-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/test/scala</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- CLEANUP UNWANTED FILES AND BINARIES -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>target</directory>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- COMPILE CODE -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                    <compilerArgs>
                        <arg>--add-exports</arg>
                        <arg>javafx.graphics/com.sun.javafx.application=ALL-UNNAMED</arg>
                    </compilerArgs>
                </configuration>
            </plugin>

            <!-- ASSEMBLE JAR WITH DEPENDENCIES -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${main.class}</mainClass>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- DOWNLOAD JAVA RUNTIMES -->
            <plugin>
                <groupId>com.igormaznitsa</groupId>
                <artifactId>mvn-jlink-wrapper</artifactId>
                <version>1.0.5</version>
                <executions>
                    <!-- CACHE MAC JDK 11 -->
                    <execution>
                        <id>cache-jdk-11-mac</id>
                        <goals>
                            <goal>cache-jdk</goal>
                        </goals>
                        <configuration>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <type>jre</type>
                                <version>11.0.5</version>
                                <arch>amd64</arch>
                                <os>macos</os>
                            </providerConfig>
                            <jdkCachePath>${project.basedir}${file.separator}jre${file.separator}mac</jdkCachePath>
                            <jdkPathProperty>jlink.mac.jdk.path</jdkPathProperty>
                        </configuration>
                    </execution>
                    <!-- CACHE WIN JDK 11 -->
                    <execution>
                        <id>cache-jdk-11-win</id>
                        <goals>
                            <goal>cache-jdk</goal>
                        </goals>
                        <configuration>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <type>jre</type>
                                <version>11.0.5</version>
                                <arch>amd64</arch>
                                <os>windows</os>
                            </providerConfig>
                            <jdkCachePath>${project.basedir}${file.separator}jre${file.separator}win</jdkCachePath>
                            <jdkPathProperty>jlink.win.jdk.path</jdkPathProperty>
                        </configuration>
                    </execution>
                    <!-- CACHE LINUX JDK 11 -->
                    <execution>
                        <id>cache-jdk-11-lin</id>
                        <goals>
                            <goal>cache-jdk</goal>
                        </goals>
                        <configuration>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <type>jre</type>
                                <version>11.0.5</version>
                                <arch>amd64</arch>
                                <os>linux</os>
                            </providerConfig>
                            <jdkCachePath>${project.basedir}${file.separator}jre${file.separator}lin</jdkCachePath>
                            <jdkPathProperty>jlink.lin.jdk.path</jdkPathProperty>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- VERIFY JDK DOWNLOADS -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.0.0-M2</version>
                <executions>
                    <execution>
                        <id>check-folder-exist</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireFilesExist>
                                    <files>
                                        <file>${project.basedir}${file.separator}jdk${file.separator}mac</file>
                                        <file>${project.basedir}${file.separator}jdk${file.separator}win</file>
                                        <file>${project.basedir}${file.separator}jdk${file.separator}lin</file>
                                    </files>
                                </requireFilesExist>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- CREATE WINDOWS EXE -->
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>1.7.25</version>
                <executions>
                    <execution>
                        <id>l4j-gui</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <headerType>gui</headerType>
                            <jar>
                                ${project.build.directory}${file.separator}${project.artifactId}-${project.version}-jar-with-dependencies.jar
                            </jar>
                            <outfile>
                                ${project.build.directory}${file.separator}${project.artifactId}.exe
                            </outfile>
                            <downloadUrl>https://bell-sw.com/pages/java-11.0.5/</downloadUrl>
                            <classPath>
                                <mainClass>${main.class}</mainClass>
                            </classPath>
                            <icon>${project.basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}micaforgelauncher.ico</icon>
                            <jre>
                                <!--suppress UnresolvedMavenProperty -->
                                <path>%PROGRAMFILES%\Mica Forge Launcher\LIBERICA_jre11.0.5_windows_amd64</path>
                                <bundledJre64Bit>true</bundledJre64Bit>
                                <minVersion>11</minVersion>
                                <jdkPreference>preferJre</jdkPreference>
                                <runtimeBits>64</runtimeBits>
                            </jre>
                            <versionInfo>
                                <fileVersion>1.0.0.0</fileVersion>
                                <txtFileVersion>${project.version}</txtFileVersion>
                                <fileDescription>${app.name}</fileDescription>
                                <copyright>C</copyright>
                                <productVersion>1.0.0.0</productVersion>
                                <txtProductVersion>1.0.0.0</txtProductVersion>
                                <productName>${app.name}</productName>
                                <internalName>${project.artifactId}</internalName>
                                <originalFilename>${project.artifactId}.exe</originalFilename>
                            </versionInfo>
                            <messages>
                                <bundledJreErr>There is a problem with the bundled JRE.</bundledJreErr>
                                <startupErr>There is a problem with starting up.</startupErr>
                                <jreVersionErr>There is a problem with your Java version. Java 11 or newer is required. This should not happen on a proper installation!
                                </jreVersionErr>
                                <launcherErr>There is a problem with the application launcher.</launcherErr>
                            </messages>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- CREATE MAC APP -->
            <plugin>
                <groupId>com.micatechnologies</groupId>
                <artifactId>appbundle-maven-plugin</artifactId>
                <version>2019.1</version>
                <configuration>
                    <version>${version}</version>
                    <includeApplicationsSymlink>true</includeApplicationsSymlink>
                    <!--suppress UnresolvedMavenProperty -->
                    <jrePath>${jlink.mac.jdk.path}</jrePath>
                    <mainClass>${main.class}</mainClass>
                    <iconFile>micaforgelauncher.icns</iconFile>
                    <additionalBundledClasspathResources>
                        <fileSet>
                            <directory>
                                ${project.basedir}${file.separator}src${file.separator}main${file.separator}resources
                            </directory>
                        </fileSet>
                    </additionalBundledClasspathResources>
                    <bundleName>${app.name}</bundleName>
                    <jvmOptions>
                        <jvmOption>-Dfile.encoding=UTF-8</jvmOption>
                    </jvmOptions>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- MOVE JAR WITH DEPENDENCIES AND MAC APP TO FINAL LOCATION -->
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <version>1.0.1</version>
                <executions>
                    <execution>
                        <id>rename-final-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>rename</goal>
                        </goals>
                        <configuration>
                            <fileSets>
                                <fileSet>
                                    <sourceFile>
                                        ${project.build.directory}${file.separator}${project.artifactId}-${project.version}-jar-with-dependencies.jar
                                    </sourceFile>
                                    <destinationFile>
                                        ${project.build.directory}${file.separator}${project.artifactId}.jar
                                    </destinationFile>
                                </fileSet>
                                <fileSet>
                                    <sourceFile>
                                        ${project.build.directory}${file.separator}${project.artifactId}-${project.version}${file.separator}${app.name}.app
                                    </sourceFile>
                                    <destinationFile>
                                        ${project.build.directory}${file.separator}${project.artifactId}-unsigned.app
                                    </destinationFile>
                                </fileSet>
                                <fileSet>
                                    <sourceFile>
                                        ${project.build.directory}${file.separator}${project.artifactId}-${project.version}.jar
                                    </sourceFile>
                                    <destinationFile>
                                        ${project.build.directory}${file.separator}${project.artifactId}-no-deps.jar
                                    </destinationFile>
                                </fileSet>
                            </fileSets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- RUN CODESIGN FOR macOS APP -->
            <plugin>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <groupId>org.codehaus.mojo</groupId>
                <executions>
                    <execution>
                        <id>Run macOS app signing</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <commandlineArgs>${project.basedir}${file.separator}deploy${file.separator}macos.sh
                            </commandlineArgs>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.5.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>11.0.2</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
            <version>11.0.2</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>11.0.2</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>11.0.2</version>
        </dependency>
        <dependency>
            <groupId>org.rauschig</groupId>
            <artifactId>jarchivelib</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.jfoenix</groupId>
            <artifactId>jfoenix</artifactId>
            <version>9.0.9</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.9</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.6</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.8.6</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>28.1-jre</version>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>3.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna</artifactId>
            <version>5.5.0</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
